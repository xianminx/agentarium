{
  "name": "agentarium-monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:frontend": "pnpm --dir frontend dev",
    "dev:backend": "cd backend && uv run python manage.py runserver",
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
